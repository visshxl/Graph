
class Solution {
  public:
//   cycle detection in DAG using toposort
    bool isCyclic(int V, vector<int> adj[]){
        vector<int> inDeg(V);
        queue<int> q;
        for(int i=0; i<V; i++){
            for(auto it:adj[i]){
                inDeg[it]++;
            }
        }
        for(int i=0; i<V; i++){
            if(!inDeg[i]) q.push(i);
        }
        vector<int> topo;
        while(!q.empty()){
            int node=q.front();
            q.pop();
            topo.push_back(node);
            for(auto it:adj[node]){
                inDeg[it]--;
                if(!inDeg[it]) q.push(it);
            }
        }
        return !(topo.size()==V);
    }
};
